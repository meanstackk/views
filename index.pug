<html>
	<head>
	<link rel="stylesheet" href="stylesheets/save.css">
	<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/css/bootstrap.min.css">
	<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.0/jquery.min.js"></script>
	<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/js/bootstrap.min.js"></script>
	<!-- <script src="javascripts/save.js"></script> -->
	</head>
	<body>
			<div class="container">
			<form action="/signup" method="post">
				<div class="row col-md-6">
					<h1>SignUp</h1>
			<label class="col-md-2">Name</label>
			<input type="text" placeholder="username" name="a"><br><br>
			<label class="col-md-2">Email</label>
			<input type="email" placeholder="email id" name="b"><br><br>
			<label class="col-md-2">Password</label>
			<input type="Password"placeholder="password" name="c"><br><br>
			<label class="col-md-2">Gender</label><br><br>
			<label class="col-md-2">Male</label>
			<input type="radio" name="Gender" value="male"><br><br>
			<label class="col-md-2">Female</label>
			<input type="radio" name="Gender" value="female"><br><br>
			<label class="col-md-2">College</label>
			<select name="select">
				<option>Select</option>
				<option value="AEC">AEC</option>
				<option value="ACET">ACET</option>
				<option value="ACOE">ACOE</option>
			</select><br><br>
			<label class="col-md-2">Branch</label>
			<select name="confirm">
				<option>Select</option>
				<option value="ECE">ECE</option>
				<option value="CSE">CSE</option>
				<option value="EEE">EEE</option>
				<option value="IT">IT</option>
				<option value="MECH">MECH</option>
				<option value="CIVIL">CIVIL</option>
			</select><br><br>
			<div class="col-md-2">
			<input type="Submit" value="SignUp">
			</div>
				</div>
			</form>
				<form action="/login" method="post">
				<div class="row col-md-6">
					<h1>Login</h1>
					<p class="alert alert-danger">#{err}</p>
					<label class="col-md-2">Name</label>
					<input type="text" placeholder="username" name="d"><br><br>
					<label class="col-md-2">Password</label>
					<input type="Password"placeholder="password" name="e"><br><br>
					<div class="col-md-2">
					<input type="Submit" value="Login">
					</div>
				</div>
			</form>
			</div>
	</body>
</html>










